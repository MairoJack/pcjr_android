<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ProgressWheel="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#0099CC">


        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow2" />
        </RelativeLayout>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:background="@drawable/border_bg_orange"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/but1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/border_bg_orange_left_radius"
            android:textColor="@color/white"
            android:text="全部1"/>
        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/orange"/>
        <TextView
            android:id="@+id/but2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/orange"
            android:text="全部2"/>
        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/orange"/>
        <TextView
            android:id="@+id/but3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/orange"
            android:text="全部3"/>
        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/orange"/>
        <TextView
            android:id="@+id/but4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/orange"
            android:text="全部4"/>
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:background="@drawable/button_invest_list_left"
            android:text="全部"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:background="@drawable/button_invest_list_left"
            android:text="全部1"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:background="@drawable/button_invest_list_left"
            android:text="全部2"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:background="@drawable/button_invest_list_left"
            android:text="全部3"/>
    </RadioGroup>
    <com.pcjr.plugins.ProgressWheel
        android:id="@+id/pw_spinner"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_centerInParent="true"
        ProgressWheel:pwBarColor="#FD5A4A"
        ProgressWheel:pwBarLength="60dp"
        ProgressWheel:pwBarWidth="20dp"
        ProgressWheel:pwContourColor="#D3D3D3"
        ProgressWheel:pwRimColor="#D3D3D3"
        ProgressWheel:pwRimWidth="20dp"
        ProgressWheel:pwSpinSpeed="3dp"
        ProgressWheel:pwTextColor="#D3D3D3"
        ProgressWheel:pwTextSize="14sp" />

    <cn.iwgang.countdownview.CountdownView
        android:id="@+id/cv_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:isShowDay="false"
        app:isShowHour="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:isShowMillisecond="false"
        app:suffixGravity="center"
        app:suffixTextColor="#000000"
        app:suffixTextSize="20sp"
        app:timeTextColor="#FFFFFF"
        app:timeTextSize="20sp"
        app:isHideTimeBackground="false"
        app:timeBgColor="#FF5000"
        app:isShowTimeBgDivisionLine="false" />
</LinearLayout>
