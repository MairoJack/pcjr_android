<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ProgressWheel="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#0099CC">

        <com.jayfang.dropdownmenu.DropDownMenu
            android:id="@+id/menu"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#0099CC"
            android:orientation="horizontal" />

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow2" />
        </RelativeLayout>
    </RelativeLayout>




    <com.pcjr.plugins.ProgressWheel
        android:id="@+id/pw_spinner"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_centerInParent="true"
        ProgressWheel:pwBarColor="#FD5A4A"
        ProgressWheel:pwBarLength="60dp"
        ProgressWheel:pwBarWidth="20dp"
        ProgressWheel:pwContourColor="#D3D3D3"
        ProgressWheel:pwRimColor="#D3D3D3"
        ProgressWheel:pwRimWidth="20dp"
        ProgressWheel:pwSpinSpeed="3dp"
        ProgressWheel:pwTextColor="#D3D3D3"
        ProgressWheel:pwTextSize="14sp" />

    <cn.iwgang.countdownview.CountdownView
        android:id="@+id/cv_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:isShowDay="false"
        app:isShowHour="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:isShowMillisecond="false"
        app:suffixGravity="center"
        app:suffixTextColor="#000000"
        app:suffixTextSize="20sp"
        app:timeTextColor="#FFFFFF"
        app:timeTextSize="20sp"
        app:isHideTimeBackground="false"
        app:timeBgColor="#FF5000"
        app:isShowTimeBgDivisionLine="false" />
</LinearLayout>
